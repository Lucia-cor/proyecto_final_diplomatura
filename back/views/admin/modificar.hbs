<div class="container" style="margin:50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar Novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                    <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Lugar" name="lugar" value="{{novedad.lugar}}"></textarea>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo" value="{{novedad.cuerpo}}"></textarea>
                </div>  
                <div class="form-group">
                    <input type="date" class="form-control" placeholder="Fecha" name="fecha" value="{{novedad.fecha}}">
                </div>
                <button type="submit" class="btn btn-outline-primary ">Modificar</button>
            </form>
            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}
        </div>

    </div>
</div>